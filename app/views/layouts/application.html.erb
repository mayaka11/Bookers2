<!doctype html>
<html lang="ja">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <div class="social"></div>
  </head>
  <body>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
  </body>
</html>

  <body class="d-flex flex-column vh-100">

    <header class="bg-dark text-white pt-5 pb-4">
       <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
            <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
          </button>


            <%= link_to 'Bookers', root_path, class: 'nav-link text-white mt-2 mb-3' %>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">




      <% if user_signed_in? %>

          <%= link_to icon('fas','home','Home'), user_path(current_user.id), class: 'nav-link text-white' %>

          <%= link_to icon('fas','users','Users'), users_path, class: 'nav-link text-white' %>

          <%= link_to icon('fas','book-open','Books'), books_path, class: 'nav-link text-white' %>

          <%= link_to icon('fas','sign-out-alt','Log out'), destroy_user_session_path, method: :delete , class: 'nav-link text-white' %>

      <% else %>

          <%= link_to icon('fas','home','Home'), root_path, class: 'nav-link text-white' %>

          <%= link_to icon('fas','link','About'), about_path, class: 'nav-link text-white' %>

          <%= link_to icon('fas','user-plus','Sign up'), new_user_registration_path, class: 'nav-link text-white' %>

          <%= link_to icon('fas','sign-in-alt','Log in'), new_user_session_path, class: 'nav_link text-white' %>


      <% end %>
      </ul>
      </div>
      </div>
      </nav>
    </header>


    <main class="mb-auto">
    <%= yield %>
    </main>
    <footer class="bg-white text-black pt-5 pb-4">
      <div class="container">
        <div class="row no-gutters">
          <div class="col-md-4"></div>
          <div class="col-md-8">
            <h6 class="text-black mt-2 mb-3">CopyRight Infratop.inc</h6>
          </div>
        </div>
      </div>
    </footer>
  </body>

</html>
