<h1>編集画面</h1>
 <%= form_with model: @book do |f| %>

  <%= flash[:Failed] %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>本文</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>
  <%= link_to "show", user_path(current_user.id) %>
  <%= link_to "back", books_path(current_user.id) %>
<% end %>