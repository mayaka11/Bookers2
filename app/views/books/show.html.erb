
<div>
    <%= flash[:success] %>
    <%= flash[:booksuccess] %>
</div>

<!-- ユーザーの投稿一覧 -->
<p id="notice"><%= notice %></p>
 <h2>User info</h2>
  <div class="container px-5 px-sm-0">
   <div class="row">
     <div class="col-md-3">

    <h3>Name</h3>
       <%= @user.name %>
    <h3>Introduction</h3>
        <%= @user.introduction %>
    <h3>Image</h3>
　       <%= image_tag @user.get_profile_image(100,100) %>

        <%= link_to icon('fas','user-cog',''),edit_user_path(@user.id), class: "nav-link btn btn-outline-secondary" %>



    <h3>New book</h3>
         <%= form_with model: @newbook do |f| %>
            <h4>Title</h4>
            <%= f.text_field :title %>
            <h4>Opinion</h4>
          <%= f.text_area :body %>

          <%= f.submit 'Create Book', class:"btn btn-success" %>
        <% end %>
     </div>


    <div class= "col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class="table table">

  <tbody>
    <td><%= image_tag @user.get_profile_image(100,100) %></td>
    <td><%= link_to @book.title, book_path(@book.id) %></td>
    <td><%= @book.body %></td>
     <%= link_to @user.name, user_path(@user.id) %>
   <% if @user.id == current_user.id %>
    <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
　  <td><%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>

  </tbody>
<% end %>




 </table>
</div>
</div>
