

<h2>User info</h2>
<%= form_with model: @user, method: :patch do |f| %>
<div>
<%= flash[:update] %>
</div>

<% if @user.errors.any? %>
   <ul class="alert alert-danger" role="alert">
    <h6 class="alert-heading">
    <%= @user.errors.count %>error prohibited this obj from being saved:
    </h6>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

  <label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>

  <label for="inputImage">Image</label>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>

  <label for="inputIntroduction">Introduction</label>
  <%= f.text_field :introduction, autofocus: true, id:"introduction", placeholder:"自己紹介文"%>

  <%= f.submit "Update User" ,class: "btn btn-secondary" %>
<% end %>
<%= link_to 'Back', :back %>